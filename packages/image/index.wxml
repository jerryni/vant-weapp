<wxs src="../wxs/utils.wxs" module="utils" />

<view class="van-image {{ round ? 'van-image--round': '' }}" style="width: {{ width }}; height: {{ height }};">
  <image
    class="van-image__img"
    mode="{{ mode }}"
    src="{{ src }}"
    lazy-load="{{ lazyLoad }}"
    bindload="onLoad"
    binderror="onError"
  >
  </image>

  <div wx:if="{{ loading }}" class="van-image__loading">
    <slot wx:if="{{ useLoadingSlot }}" name="loading" />
    <van-icon wx:else name="photo-o" size="22" />
  </div>
  <div wx:if="{{ error }}" class="van-image__error">
    <slot wx:if="{{ useErrorSlot }}" name="error" />
    <van-icon wx:else name="warning-o" size="22" />
  </div>
</view>
